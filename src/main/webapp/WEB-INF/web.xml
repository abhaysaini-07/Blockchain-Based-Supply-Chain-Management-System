<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Blockchain Supply Chain Management System</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>BlockchainServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.BlockchainServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BlockchainServlet</servlet-name>
        <url-pattern>/api/blockchain/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.supplychain.servlet.TransactionServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/api/transactions</url-pattern>
    </servlet-mapping>
</web-app>

